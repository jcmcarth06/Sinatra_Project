<%= @error %>
  <form action='/books' method="post">
    Add a Book to the Reading List:<br>
      <input type="text" name="title" placeholder="Title"><br>
      <input type="text" name="book" placeholder="Author"><br>
      <% @genres.each do |genre| %>
      <input type="radio" name="genre_id" value="<%= genre.id %>"><%= genre.name %></input><br>
      <% end %>
      <input type="submit" value="submit">
  </form>
